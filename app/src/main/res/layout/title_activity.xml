<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/select_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:onClick="setImage"
            android:text="Select Image" />

        <LinearLayout
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rows_text"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Rows: "
                android:textAlignment="textStart"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/rows_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:ems="10"
                android:inputType="number"
                android:text="5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/columns_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Columns:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/columns_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:text="5" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/display_numbers_check_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Display Box Numbers?" />

        <Button
            android:id="@+id/number_color_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:onClick="setNumberColor"
            android:text="Select Number Color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/number_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Number Size:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/number_size_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:text="16" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/display_outline_check_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Display Outlines?" />

        <Button
            android:id="@+id/outline_color_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:onClick="setOutlineColor"
            android:text="Select Outline Color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/outline_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Outline Size:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/outline_size_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:text="10" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/invert_controls_check_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Invert Controls?" />

        <CheckBox
            android:id="@+id/allow_hint_check_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Allow Hints?" />

        <CheckBox
            android:id="@+id/randomize_start_check_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Randomize Empty Box Location?" />

        <Button
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:onClick="startGame"
            android:text="Start" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_preview"
            android:layout_width="wrap_content"
            android:layout_height="152dp"
            android:layout_weight="0" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_weight="0" />

        <View
            android:id="@+id/number_color_view"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="0" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:layout_weight="0" />

        <View
            android:id="@+id/outline_color_view"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="0" />
    </LinearLayout>

</LinearLayout>